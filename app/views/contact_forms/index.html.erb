<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Contact forms" %>
  <div id="contact_forms" class="min-w-full">
    <% @contact_forms.each do |contact_form| %>
      <%= render contact_form %>
      <p>
        <%= link_to "Show this contact form", contact_form, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
