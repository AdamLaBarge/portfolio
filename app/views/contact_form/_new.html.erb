<div class="hero-content flex-col lg:flex-row-reverse " >
  <div class="text-center lg:text-left ">
    <h1 class="text-5xl font-bold">Contact me</h1>
    <p class="py-6">If you would like to learn more about me, feel free to send me a message!</p>
  </div>
  <div class="card shrink-0 w-full max-w-lg shadow-xl bg-base-100 mr-10">
    <%= form_with scope: :contact_form, url: contact_form_index_path, method: :post, local: true, class: "card-body" do |form| %>
      <div class="form-control">
        <%= form.email_field :email, placeholder: "e-mail", class: "input input-bordered", required: true %>
      </div>
      <div class="form-control">
        <%= form.text_area :message, placeholder: "message", class: "textarea textarea-bordered h-48", required: true %>
      </div>
      <div class="form-control mt-6">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
